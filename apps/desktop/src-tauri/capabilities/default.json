{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "fs:default",
    {
      "identifier": "fs:scope",
      "allow": [
        "$HOME/TsumugiProjects",
        "$HOME/TsumugiProjects/*",
        "$HOME/TsumugiProjects/**",
        "$HOME/TsumugiProjects/*/.tsumugi",
        "$HOME/TsumugiProjects/*/.tsumugi/**"
      ]
    },
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-read-dir",
    "fs:allow-remove"
  ]
}
